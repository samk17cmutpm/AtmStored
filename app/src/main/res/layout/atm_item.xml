<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:transitionName="profile">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/atm_item_height"
        android:padding="@dimen/atm_padding">
        <TextView
            android:text="atm name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_atm_name"
            android:textColor="@color/primary_text"
            android:maxLines="1"
            android:ellipsize="end"
            android:textSize="@dimen/atm_name"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:text="atn address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_atm_address"
            android:textColor="@color/secondary_text"
            android:maxLines="2"
            android:ellipsize="end"
            android:textSize="@dimen/atm_address"
            android:layout_below="@+id/tv_atm_name"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="10dp" />
    </RelativeLayout>

</android.support.v7.widget.CardView>